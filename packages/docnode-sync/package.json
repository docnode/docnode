{
  "name": "@docnode/sync",
  "license": "SEE LICENSE IN LICENSE.md",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "concurrently \"tsc -p tsconfig.build.json --watch\" \"tsx watch --include ./worker ./worker/bundle.ts\"",
    "build": "tsc -p tsconfig.build.json && node --experimental-strip-types ./worker/bundle.ts",
    "clean": "rm -rf .next node_modules .turbo dist tsconfig.build.tsbuildinfo || rmdir /s /q .next node_modules .turbo dist tsconfig.build.tsbuildinfo",
    "db:push": "drizzle-kit push --config=./src/server/providers/postgres/drizzle.config.ts",
    "test-db:push": "drizzle-kit push --config=./src/tests-int/db-models-bench/test-drizzle.config.ts",
    "db:studio": "drizzle-kit studio --config=./src/server/providers/postgres/drizzle.config.ts",
    "typecheck": "tsc --noEmit"
  },
  "bin": {
    "docnode-server": "./dist/src/server/cli.js"
  },
  "devDependencies": {
    "concurrently": "^9.1.2",
    "drizzle-kit": "^0.30.2",
    "esbuild": "^0.24.2",
    "tsx": "^4.19.2"
  },
  "exports": {
    "./*": {
      "types": "./dist/src/exports/*.d.ts",
      "default": "./dist/src/exports/*.js"
    }
  },
  "dependencies": {
    "docnode": "workspace:*",
    "drizzle-orm": "^0.38.4",
    "idb": "^8.0.1",
    "postgres": "^3.4.5",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "valibot": "^1.0.0"
  }
}
